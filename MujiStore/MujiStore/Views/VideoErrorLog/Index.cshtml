
@using PagedList.Mvc
@{
    var mediaDtl = ViewData["videoList"] as PagedList.PagedList<MujiStore.Models.tblMedia>;
    ViewBag.Title = MujiStore.Resources.Resource.VideoLogs;


    if (ViewData["CvtStatus"] == null)
    {
        ViewData["CvtStatus"] = "4";
    }

}
<br />


<h2 style="color:#ec2213; background-color:#e7bebb; margin-top:-18px; margin-left:-2px;">@MujiStore.Resources.Resource.VideoLogs</h2>

<script type="text/javascript" src="~/Scripts/jquery-1.8.3.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/FtpFile-pc1.css">
<link rel="stylesheet" href="~/Content/font-awesome.min.css">
<body>

    @using (Html.BeginForm("Index", "VideoErrorLog", FormMethod.Post))
    {<div class="border-style">



            <p>
                <span style="margin-left:15px;">
                    @MujiStore.Resources.Resource.CommonSearch :
                </span>  @Html.DropDownList("ConvertStatus", null, new { @class = "form-control5 form1" })
                <input type="submit" value=@MujiStore.Resources.Resource.CommonSearch id="Submit" class="btn btn-default" style="margin-bottom: 4px; width: 85px; margin-left: 37px; height: 32px; " />
                <a href=@Url.Action("Index","VideoErrorLog") class="clear">
                    @MujiStore.Resources.Resource.clear
                </a>
            </p>





        </div>
        <p style="margin-top:-36px;">
            <br />
            <br />


        </p>
        <style type="text/css">
        </style>
        if (mediaDtl.Count < 1)
        {
            <table class="table " style="background-color:#ffffff; width:100%;  margin-bottom:0px;">
                <tr>
                    <td colspan="8" style="text-align:center;background-color:#EEE; ">
                        @Html.Label(MujiStore.Resources.Resource.Nodata, MujiStore.Resources.Resource.Nodata)
                    </td>
                </tr>
            </table>
        }
        else
        {

            <table class="table " style="background-color:#ffffff; width:100%;  margin-bottom:0px;">
                <thead>
                    <tr style="background-color:#822433; color:#ffffff; width:90%">
                     
                        <th style="width:50%;">
                            @Html.DisplayName(MujiStore.Resources.Resource.ModFeedbackMediaFileName)
                        </th>

                        <th style="width:14%;">
                            @Html.DisplayName(MujiStore.Resources.Resource.CommonCRTDT)
                        </th>

                        <th class="Folderth" style="text-align:center">
                            @Html.DisplayName(MujiStore.Resources.Resource.VieErrorLogStatus)

                        </th>

                    </tr>
                </thead>
                <tbody style="width:90%">

                    @foreach (var item in mediaDtl)
                    {
                        <tr style="background-color:#EEE; width:90%">

                           
                            <td class="Title">
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>


                            <td class="Folder">
                                @Html.DisplayFor(modelItem => item.STRCRTDT)
                            </td>
                            <td class="Description">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>

                        </tr>
                    }

                </tbody>

            </table>
        }
        if (mediaDtl.PageSize < mediaDtl.TotalItemCount)
        {
            <div>

                @MujiStore.Resources.Resource.CommonPage @(mediaDtl.PageCount < mediaDtl.PageNumber ? 0 : mediaDtl.PageNumber) @MujiStore.Resources.Resource.CommonOf @mediaDtl.PageCount

                @Html.PagedListPager(mediaDtl, page => Url.Action("Index",
                     new { page, sortOrder = ViewBag.CurrentSort, SearTitle = ViewBag.SearTitle, CdStDate = ViewBag.CdStDate, CdEdDate = ViewBag.CdEdDate, CvtStatus = ViewBag.cvtStatus, FolID = ViewBag.FolID, MedID = ViewBag.MedID }))
            </div>
        }
        <br />
        <br />
    }
</body>