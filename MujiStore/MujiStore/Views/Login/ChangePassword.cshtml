@model MujiStore.Models.tblUser

@{
    ViewBag.Title = MujiStore.Resources.Resource.VieLoginChangePwdBrowTitle;
}
<style>
    .form-horizontal .control-label {
        padding-top: 7px;
        margin-bottom: 10px;
        text-align: left;
    }
</style>
<ol class="breadcrumb" id="breadcrumb">
    <li>@Html.ActionLink(MujiStore.Resources.Resource.breadcrumbVideoall, "ViewUploadDetails", "VideoFiles")</li>
    <li>
        @Html.ActionLink(@MujiStore.Resources.Resource.breadcrumbManagement, "Index", "Menus")
    </li>
    <li>
        @MujiStore.Resources.Resource.Breadcrumbchangepassword
    </li>
</ol>
<h2 style="color:#ec2213; background-color:#e7bebb; margin-left:-2px;">@MujiStore.Resources.Resource.VieLoginChangePwdH2</h2>
<link rel="stylesheet" type="text/css" href="~/Content/Site.css">
@using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <p>
        <label style="font-weight:normal">
            @MujiStore.Resources.Resource.ConfimpasswordDescription1
        </label>
        <br />
        <label style="font-weight:normal">

            @MujiStore.Resources.Resource.ConfimpasswordDescription2
        </label>
    </p>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserID)
        @Html.HiddenFor(model => model.UserName)
        @Html.HiddenFor(model => model.UserEmail)
        @Html.HiddenFor(model => model.CRTCD)
        @Html.HiddenFor(model => model.CRTDT)
        @Html.HiddenFor(model => model.Authority)
        @Html.HiddenFor(model => model.Authority1)
        @Html.HiddenFor(model => model.Authority2)
        @Html.HiddenFor(model => model.Authority4)
        @Html.HiddenFor(model => model.Authority8)
        @Html.HiddenFor(model => model.Authority16)
        @Html.HiddenFor(model => model.Password)
        @Html.HiddenFor(model => model.Role)
        @Html.HiddenFor(model => model.ID)
        

        <div class="form-group">
            @Html.Label(MujiStore.Resources.Resource.ModtblUserCurrentPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(Model => Model.OldPassword, new { htmlAttributes = new { @class = "form-control textbox", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label(MujiStore.Resources.Resource.ModtblUserNewPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control textbox", @maxlength = "25", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class = "control-label col-md-2">@MujiStore.Resources.Resource.Confrimnewpassword</label>
            
            <div class="col-md-10">
                @Html.PasswordFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @class = "form-control textbox", @maxlength = "25", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
           
            <div class="col-md-10">
                <input type="submit" value=@MujiStore.Resources.Resource.Change class="btn btn-default" style="width:85px;margin-left:0px;" />
            </div>
        </div>
    </div>
}
