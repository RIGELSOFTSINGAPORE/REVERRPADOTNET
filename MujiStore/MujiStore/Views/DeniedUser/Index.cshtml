@using PagedList.Mvc
@model PagedList.IPagedList<MujiStore.Models.tblDeniedIPAddress>
@{
    ViewBag.Title = MujiStore.Resources.Resource.DeniedUser;

}

<h2 style="color:#ec2213; background-color:#e7bebb;  margin-left:-2px;">@MujiStore.Resources.Resource.DeniedUser</h2>

<script type="text/javascript" src="~/Scripts/jquery-1.8.3.min.js"></script>

<link rel="stylesheet" type="text/css" href="~/Content/FtpFile-pc1.css">

<link rel="stylesheet" href="~/Content/font-awesome.min.css">
<style>
    .form-control1 {
        width: 20%;
        height: 31px;
        padding: 6px 12px;
        font-size: 14px;
