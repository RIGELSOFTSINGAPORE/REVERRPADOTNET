@using PagedList.Mvc
@model PagedList.PagedList<MujiStore.Models.tblMedia>

@{
    ViewBag.Title = MujiStore.Resources.Resource.VieVideoMgmtViewLogBrowTitle;
}
<style>
    .Title {
        word-break: break-all;
        line-height: 1.42857143;
        vertical-align: top;
        border-top: 1px solid #ddd;
        width: 30%;
        padding: 8.5px;
    }
</style>
<h2 style="color:#ec2213; background-color:#e7bebb; margin-left:-4px; ">@MujiStore.Resources.Resource.VieVideoMgmtViewLogH2</h2>

<hr />
<div>
<table class="table fixed_header" style="background-color:#ffffff; width:100%;   ">
    <thead>
        <tr style="background-color:#822433; color:#ffffff;">
            <th class="ID" >
                @Html.DisplayName(@MujiStore.Resources.Resource.VietblMediaIndexID)
            </th>
            <th class="">
                @MujiStore.Resources.Resource.Title
            </th>
            <th class="">
                @MujiStore.Resources.Resource.CommonIpAddress
            </th>
            <th class="">
                @MujiStore.Resources.Resource.CommonCRTDT

            </th>
            <th class="">
                @MujiStore.Resources.Resource.CommonCRTCD
            </th>
            <th class="Description1">
                @MujiStore.Resources.Resource.CommonUPDDT
            </th>
            <th class="Description1">
                @MujiStore.Resources.Resource.CommonUPDCD
            </th>
        </tr>
    </thead>

    <tbody style="width:100%">
        @foreach (var item in Model)
        {
            <tr style="background-color:#EEE;">
                <td class="">
                    @Html.DisplayFor(modelItem => item.MediaID)
                </td>
                <td class="Title">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="">
                    @Html.DisplayFor(modelItem => item.IpAddress)
                </td>
                <td class="">
                    @Html.DisplayFor(modelItem => item.STRCRTDT)
                    <br />
                    @Html.DisplayFor(modelItem => item.STRCRTDTTIME)
                </td>
                <td class="vid" style="font-weight:normal;">
                    @Html.DisplayFor(modelItem => item.CRTCD)
                </td>
                <td class="vid" style="font-weight:normal;">
                    @Html.DisplayFor(modelItem => item.STRUPDDT)
                    <br />
                    @Html.DisplayFor(modelItem => item.STRUPDDTTIME)
                </td>
                <td class="Folder">
                    @Html.DisplayFor(modelItem => item.UPDCD)
                </td>
            </tr>
        }
    </tbody>

</table>
</div>
<br />


@if (Model.PageSize < Model.TotalItemCount)
{
    <div>
        @MujiStore.Resources.Resource.CommonPage @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @MujiStore.Resources.Resource.CommonOf @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("VideoMgmtViewLog",
             new { page }))
    </div>
}
<div style="margin-bottom:15px">
    <a href=@Url.Action("Index","ViewLogs")>
        @MujiStore.Resources.Resource.CommonBackToViewLogs
    </a>
</div>