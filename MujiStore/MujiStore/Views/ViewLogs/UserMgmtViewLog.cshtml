@using PagedList.Mvc
@model PagedList.PagedList<MujiStore.Models.tblUser>

@{
    ViewBag.Title = MujiStore.Resources.Resource.VieUserMgmtViewLogBrowTitle;
}

<h2 style="color:#ec2213; background-color:#e7bebb; margin-left:-4px; margin-bottom:15px;">@MujiStore.Resources.Resource.VieUserMgmtViewLogH2</h2>
<div>
<hr />
<table class="table fixed_header" style="background-color:#ffffff; width:100%;   ">
    <thead>
        <tr style="background-color:#822433; color:#ffffff;">
            
            <th class="Title">
                @Html.DisplayNameFor(model => model.FirstOrDefault().UserName)
            </th>
            <th class="Description1">
                @Html.DisplayNameFor(model => model.FirstOrDefault().CRTDT)
            </th>
            <th class="vid">
                @Html.DisplayNameFor(model => model.FirstOrDefault().CRTCD)
            </th>

            <th class="Description1">
                @Html.DisplayNameFor(model => model.FirstOrDefault().UPDCD)
            </th>
            <th class="vid">
                @Html.DisplayNameFor(model => model.FirstOrDefault().UPDDT)
            </th>
            <th class="vid">
                @Html.DisplayNameFor(model => model.FirstOrDefault().IPAddress)
            </th>


        </tr>
    </thead>

    <tbody style="width:100%">
        @foreach (var item in Model)
        {
            <tr style="background-color:#EEE;">
                
                <td class="Description">
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td class="vid" style="font-weight:normal;">
                    @Html.DisplayFor(modelItem => item.STRCRTDT)
                    <br />
                    @Html.DisplayFor(modelItem => item.STRCRTDTTIME)
                </td>
                <td class="Folder">
                    @Html.DisplayFor(modelItem => item.CRTCD)
                </td>
                <td class="Folder">
                    @Html.DisplayFor(modelItem => item.UPDCD)
                </td>
                <td class="vid" style="font-weight:normal;">
                    @Html.DisplayFor(modelItem => item.STRUPDDT)
                    <br/>
                    @Html.DisplayFor(modelItem => item.STRUPDDTTIME)
                </td>
                <th class="vid" style="font-weight:normal;">
                    @Html.DisplayFor(ModelItem => item.IPAddress)
                </th>

            </tr>
        }
    </tbody>
</table>
</div>
<br />

@if (Model.PageSize < Model.TotalItemCount)
{
    <div>
        @MujiStore.Resources.Resource.CommonPage @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @MujiStore.Resources.Resource.CommonOf @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("UserMgmtViewLog",
             new { page }))
    </div>
}
<div style="margin-bottom:15px">
    <a href=@Url.Action("Index","ViewLogs")>
        @MujiStore.Resources.Resource.CommonBackToViewLogs
    </a>
</div>