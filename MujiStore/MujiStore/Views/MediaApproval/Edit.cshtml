@model MujiStore.Models.tblMedia

@{
    ViewBag.Title = MujiStore.Resources.Resource.VideoChangeApproval;
    var VidDur = "";
    int i = 0;
   
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/Site.css">
<ol class="breadcrumb" id="breadcrumb">
    <li>@Html.ActionLink(MujiStore.Resources.Resource.breadcrumbVideoall, "ViewUploadDetails", "VideoFiles")</li>
    <li>
        @Html.ActionLink(@MujiStore.Resources.Resource.breadcrumbManagement, "Index", "Menus")
    </li>
    <li>
        @Html.ActionLink(@MujiStore.Resources.Resource.breadcrumbVideoChangeApproval, "Index", "MediaApproval")
    </li>
    <li>
        @MujiStore.Resources.Resource.VideoChangeApproval  @MujiStore.Resources.Resource.CommonEdit
    </li>
</ol>
<h2 style="color:#ec2213; background-color:#e7bebb;margin-left:-2px;">@MujiStore.Resources.Resource.Approvedisapprove - @MujiStore.Resources.Resource.VideoChangeApproval</h2>
<script type="text/javascript">
    $(document).ready(function () {

        $("#btnDisApprove").click(function () {
          
            document.getElementById('NewApprovalStatus').value = 0;
        });

        $("#btnApprove").click(function () {
            document.getElementById('NewApprovalStatus').value = 1;
        });

    });

</script>
<style type="text/css">
    .maxwidth {
        max-width: 100%
    }

    textarea {
        max-width: 100%;
    }

    .form-horizontal .control-label {
        padding-top: 0px;
        margin-bottom: 0px;
        text-align: left;
    }

</style>
@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()

<div class="form-horizontal">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ApplicationID)
    @Html.HiddenFor(model => model.MediaID)
    @Html.HiddenFor(model => model.NewApprovalStatus)
    @Html.HiddenFor(model => model.FolderID)
    
    <div class="form-group" style=" margin-left: 0px;">
        @MujiStore.Resources.Resource.Pleaseprocessapprovalordenial
    </div>

    <div class="form-group">
        
        @Html.Label(MujiStore.Resources.Resource.VietblMediaIndexID, new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            <div class="col-md-1">
                @Html.LabelForModel(Model.MediaID.ToString(), new { htmlAttributes = new { @class = "form-control  col-md-2" } })
            </div>
            <div class="col-sm-5">
                <video id="video" src="@Url.Content("~/Video/" + Model.Video + "")" controls="true"
                       style="width:100%" height="250" />
                <canvas id="myCanvas" width="352" height="250"
                        style="border: 1px solid #d3d3d3;">
                    @MujiStore.Resources.Resource.VietblMediaEditBrowSupport
                </canvas>
            </div>
            <div class="col-sm-3">
                @if (ViewBag.Lan == "ja")
                {

                    if (Model.Thumbnail != "" && Model.Thumbnail != null)
                    {
                        if (File.Exists(Server.MapPath("~/thumbs/" + Model.Thumbnail)))
                        {
                            <img src="@Url.Content("~/thumbs/" + Model.Thumbnail + "")" style="margin-top:120px; width:200px; height:137px;">
                        }
                        else
                        {
                            <img src="@Url.Content("~/img/Image not found_JP.png")" style="margin-top:120px; width:200px;height:137px;">
                        }

                    }
                    else
                    {
                        <img src="@Url.Content("~/img/Thumbnail not generated_JP.png")" style="margin-top:120px; width:200px;height:137px;">
                    }




                }
                else
                {

                    if (Model.Thumbnail != "" && Model.Thumbnail != null)
                    {
                        if (File.Exists(Server.MapPath("~/thumbs/" + Model.Thumbnail)))
                        {
                            <img src="@Url.Content("~/thumbs/" + Model.Thumbnail + "")" style="margin-top:120px; width:200px; height:137px;">
                        }
                        else
                        {
                            <img src="@Url.Content("~/img/Imagenotfound.jpg")" style="margin-top:120px; width:200px;height:137px;">
                        }

                    }
                    else
                    {
                        <img src="@Url.Content("~/img/Thumbnailnotgenerated.jpg")" style="margin-top:120px; width:200px;height:137px;">
                    }


                }
                <div style="margin-top: 15px;margin-left: 65px;">
                    @Html.Label(MujiStore.Resources.Resource.CntVideoDemoVideoThambnail, MujiStore.Resources.Resource.CntVideoDemoVideoThambnail)
                </div>
            </div>
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="color: black; word-break: break-all; text-align: justify;">
            @Html.LabelForModel(Model.Title, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="color: black; word-break: break-all; text-align: justify;">
            @Html.LabelForModel(Model.Description, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(MujiStore.Resources.Resource.CntVideoDemoVideoFolderName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelForModel(Model.FolderName, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(@MujiStore.Resources.Resource.Statechange, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model.ApprovalStatus == 3)
            {
                @Html.LabelForModel(@MujiStore.Resources.Resource.requesttochangeaproval, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
            }
            else if (Model.ApprovalStatus == 0)
            {
                @Html.LabelForModel(@MujiStore.Resources.Resource.requesttochangeunaproval, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
            }

        </div>
    </div>
    <div class="form-group">
        @Html.Label(@MujiStore.Resources.Resource.CommonDelete, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 danger" style="color:red">

            @if (Model.PhysicalDELFG == true)
            {
                @Html.LabelForModel(@MujiStore.Resources.Resource.deleterequestThevideo, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
            }

        </div>
        <div class="col-md-10">
            @if (Model.PhysicalDELFG == false)
            {
                @Html.LabelForModel(@MujiStore.Resources.Resource.Itisnotdeletionrequest, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
            }
        </div>

    </div>
    <div class="form-group">
        @Html.Label(@MujiStore.Resources.Resource.note, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelForModel(Model.Comments, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(@MujiStore.Resources.Resource.Registeredperson, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelForModel(Model.Registerer, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(@MujiStore.Resources.Resource.RegisteredDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.LabelForModel(Model.STRCRTDT.ToString(), new { htmlAttributes = new { @class = "form-control  col-md-2" } })
        </div>
    </div>
    <div class="form-group">
        @Html.Label(@MujiStore.Resources.Resource.Videoplaysdate, htmlAttributes: new { @class = "control-label col-md-2" })
        @if (Model.sstreamingconstartdatetime != "0001/01/01 00:00:00")
        {
        <div class="col-md-10">
    @Html.LabelForModel(Model.sstreamingconstartdatetime, new
{
    htmlAttributes = new { @class = "form-control  col-md-2" }
})
</div>
        }
</div>
    <div class="form-group">
        @Html.Label(@MujiStore.Resources.Resource.Videoplayedate, htmlAttributes: new { @class = "control-label col-md-2" })
        @if (Model.sstreamingconenddatetime != "0001/01/01 00:00:00")
        {
            <div class="col-md-10">
                @Html.LabelForModel(Model.sstreamingconenddatetime, new { htmlAttributes = new { @class = "form-control  col-md-2" } })
            </div>
        }
        </div>


<div style = "margin-bottom:30px;" class="form-group">
    
        <div class="col-sm-2" style="margin-top:20px">
            @Html.ActionLink(MujiStore.Resources.Resource.CommonBackToList, "Index", new { page = @ViewBag.Page, @class = "linkclass" }, null)
        </div>
        <div class="col-md-3">
            <input type="submit" id="btnApprove" class="btn btn-default" style="margin-left: 0px;  margin-top: 10px; padding-bottom: 3px; padding-top: 3px;" value="@MujiStore.Resources.Resource.toapprove" />
        </div>

        <div class="col-md-5">

            <input type="submit" id="btnDisApprove" class="btn btn-default" style="margin-left: 0px;  margin-top: 10px; padding-bottom: 3px; padding-top: 3px;" value="@MujiStore.Resources.Resource.todisavow" />

        </div>



    </div>




</div>

}


@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
