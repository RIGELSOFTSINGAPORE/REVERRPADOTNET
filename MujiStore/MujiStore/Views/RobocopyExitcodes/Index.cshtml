@using PagedList.Mvc
@model PagedList.IPagedList<MujiStore.Models.tblRobocopyExitcode>
@{
    ViewBag.Title = @MujiStore.Resources.Resource.VieFormatsIndex;
}
<h2 style="color:#ec2213; background-color:#e7bebb; margin-left:-2px; margin-bottom:14px;">@MujiStore.Resources.Resource.RobocopyExitcodes</h2>

<p>
    @Html.ActionLink(@MujiStore.Resources.Resource.CreateNewRobocopy, "Create")
</p>
<table class="table" style="background-color:#ffffff; height:100%;">
    <tr style="background-color:#822433; color:#ffffff;">
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().RobocopyExitcodeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DELFG)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:#EEE;">
            <td>
                @Html.DisplayFor(modelItem => item.RobocopyExitcodeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DELFG)
            </td>

            <td>
                @Html.ActionLink(@MujiStore.Resources.Resource.StreamSreverFormatEdit, "Edit", new { id = item.RobocopyExitcodeID })
            </td>
        </tr>
    }

</table>
<br />

@if (Model.PageSize < Model.TotalItemCount)
{
    <div>
        @MujiStore.Resources.Resource.CommonPage @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @MujiStore.Resources.Resource.CommonOf @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Index",
             new { page }))
    </div>
}
