                    <div>
                        <span style="font-weight:bold">Other Settings</span>

                    </div>
                    <br />
                    <div>

                        <div>
                            <label>Database polling Time</label>
                            @Html.TextBoxFor(Model => Model.Database_Polling_Time, new { @class = "txtbox" })
