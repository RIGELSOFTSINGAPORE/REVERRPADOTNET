                        <span style="font-weight:bold">Manage Printer</span>

                    </div>
                    <br />
                    <div class="row">
                        <table>
                            <tr>
                                <th></th>
                                <th>IPAddress</th>
                                <th>Port No</th>
                            </tr>
                            <tr>
                                <td>Packer1</td>
                                <td>@Html.TextBoxFor(Model => Model.IP_Address1_Print, new { @class = "txtbox",@value="123" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port1_Print, new { @class = "txtbox" })</td>
                            </tr>
                            <tr>
                                <td>Packer2</td>
                                <td>@Html.TextBoxFor(Model => Model.IP_Address2_Print, new { @class = "txtbox" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port2_Print, new { @class = "txtbox" })</td>
                            </tr>
                            <tr>
                                <td>Packer3</td>
                                <td>@Html.TextBoxFor(Model => Model.IP_Address3_Print, new { @class = "txtbox" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port3_Print, new { @class = "txtbox" })</td>
                            </tr>
                            <tr>
                                <td>Packer4</td>
