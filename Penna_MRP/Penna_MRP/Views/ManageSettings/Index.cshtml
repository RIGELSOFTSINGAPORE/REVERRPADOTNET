                                <td>@Html.TextBoxFor(Model => Model.IP_Address1_counter2, new { @class = "txtbox" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port1_counter2, new { @class = "txtbox" })</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td style="white-space: nowrap">Packer2 Counter1</td>
                                <td>@Html.TextBoxFor(Model => Model.IP_Address2_counter1, new { @class = "txtbox" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port2_counter1, new { @class = "txtbox" })</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td style="white-space: nowrap">Packer2 Counter2</td>
                                <td>@Html.TextBoxFor(Model => Model.IP_Address2_counter2, new { @class = "txtbox" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port2_counter2, new { @class = "txtbox" })</td>
                                <td></td>
                                <td></td>
                            </tr>

                            <tr>
                                <td style="white-space: nowrap">Packer3 Counter1</td>
                                <td>@Html.TextBoxFor(Model => Model.IP_Address3_counter1, new { @class = "txtbox" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port3_counter1, new { @class = "txtbox" })</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td style="white-space: nowrap">Packer3 Counter2</td>
                                <td>@Html.TextBoxFor(Model => Model.IP_Address3_counter2, new { @class = "txtbox" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port3_counter2, new { @class = "txtbox" })</td>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td style="white-space: nowrap">Packer4 Counter1</td>
                                <td>@Html.TextBoxFor(Model => Model.IP_Address4_counter1, new { @class = "txtbox" })</td>
                                <td>@Html.TextBoxFor(Model => Model.Port4_counter1, new { @class = "txtbox" })</td>
