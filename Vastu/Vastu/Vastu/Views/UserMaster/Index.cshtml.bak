@using PagedList.Mvc
@model PagedList.PagedList<Vasthu_Models.VS_USER_MST>
@{
    ViewBag.Title =  @Vastu.Resources.Resource.UserMaster;
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>@Vastu.Resources.Resource.UserMaster</h2>
<!-- Modal DeleteMenuModal -->
<div class="modal fade" id="DeleteVastuModal" tabindex="-1" role="dialog" aria-labelledby="DeleteVideoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteVastuModalLabel">Delete User Master</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body DeleteVastucontent">
                Are you sure you want to delete?

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary btndeletevastu btn-success">Yes</button>
            </div>
        </div>
    </div>
</div>
@Html.Hidden("DeleteuserId")
<p>
    @* @Html.ActionLink(Vastu.Resources.Resource.CreateNew, "Create", null, htmlAttributes: new { @class = "CreateNew" })*@
    <a href="@Url.Action("Create","UserMaster")" class="btn btn-info btn-lg"> <span class="glyphicon glyphicon-new-window" title="Create"></span>@Vastu.Resources.Resource.CreateNew</a>
</p>
<table class="table" style="background-color:#ffffff;">
    <tr style="background-color:#4CAF50; color:#ffffff;">
        <th>
            @Html.DisplayName(Vastu.Resources.Resource.Loginname)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.LOGIN_PASSWORD)
            </th>*@
        <th>
            @Html.DisplayName(Vastu.Resources.Resource.FirstName)
        </th>
        <th>
            @Html.DisplayName(Vastu.Resources.Resource.MiddleName)
        </th>
        <th>
            @Html.DisplayName(Vastu.Resources.Resource.LastName)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.ADDRESS_LINE1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ADDRESS_LINE2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CITY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.COUNTRY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMAIL_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CONTACT_NO)
            </th>*@
        <th>
            @Html.DisplayName(Vastu.Resources.Resource.UserType)
        </th>

        <th>
            @Html.DisplayName(Vastu.Resources.Resource.Disable)
        </th>

        <th>@Html.DisplayName(Vastu.Resources.Resource.EditDelete)</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:#EEE;">
            <td>
                @Html.DisplayFor(modelItem => item.LOGIN_NAME)
            </td>
            @*<th>
                    @Html.DisplayFor(model => item.LOGIN_PASSWORD)
                </th>*@
            <td>
                @Html.DisplayFor(modelItem => item.FIRST_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MIDDLE_NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LAST_NAME)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.ADDRESS_LINE1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ADDRESS_LINE2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CITY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.COUNTRY)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EMAIL_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CONTACT_NO)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.USER_TYPE_NAME_STR)
            </td>

            <td>

                @Html.DisplayFor(modelItem => item.DELETE_FLAG)

            </td>

            <td>
                @*  @Html.ActionLink(Vastu.Resources.Resource.Edit, "Edit", new { id = item.USER_ID }, new { @class = "edit1" })*@
                <a href="@Url.Action("Edit","UserMaster",new { id = item.USER_ID})"> <span class="glyphicon glyphicon-pencil" title="Edit"></span></a>
                @*<a href="#" onclick="DeleteVastuConfirmation(@item.USER_ID);" id="btnDelete" data-toggle="modal" data-target="#deleteModal" title="Delete"><span class="glyphicon glyphicon-trash"></span></a>*@

            </td>
        </tr>
    }
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="7" align="center">No Records Found</td>
        </tr>
    }
</table>
<br />
<br />
<br />
<br />
@if (Model.PageSize < Model.TotalItemCount)
{
    <div>
        @Vastu.Resources.Resource.Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @Vastu.Resources.Resource.of  @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index",
             new { page }))
    </div>
}
@section scripts
{

    <script>

        function DeleteVastuConfirmation(VastuID) {

            $('#DeleteuserId').val(VastuID);
            $('#DeleteVastuModal').modal('show');
        }

        $('.btndeletevastu').on('click', function () {

            DeleteVastu($('#DeleteuserId').val());

        });
        function DeleteVastu(VastuID) {
            debugger;
            $('#DeleteVastuModal').modal('hide');
            $.ajax({
                url: '@Url.Action("DeleteuserMaster", "VastuMaster")',
                type: 'POST',
                data: { 'VastuID': VastuID },
                success: function (result) {
                    if (result.errorcode == 1) {

                        alert('Vastu User Deleted Successfully');
                        window.location.href = "@Url.Action("Index", "userMaster")";
                    }
                    else {
                        alert('Vastu User Deletion Failed.');
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    </script>
}