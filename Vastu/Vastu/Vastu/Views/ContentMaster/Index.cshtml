@using PagedList.Mvc
@model PagedList.PagedList<Vasthu_Models.VS_CONTENT_MST>

@{
    ViewBag.Title = "Content Master - List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <h2>Content Master</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "CreateNew" })
</p>
<table class="table" style="background-color:#ffffff;">
    <tr style="background-color:#4CAF50; color:#ffffff;">
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CONTENT_NAME)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().DELETE_FLAG)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="background-color:#EEE;">
            <td>
                @Html.DisplayFor(modelItem => item.CONTENT_NAME)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.DELETE_FLAG)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CONTENT_ID }, new { @class = "edit1" })
            </td>
        </tr>
    }
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="2" align="center">No Records Found</td>
        </tr>
    }
</table>
<br />
<br />
<br />
<br />
@if (Model.PageSize < Model.TotalItemCount)
{
    <div>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of  @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index",
             new { page }))
    </div>
}
