@model List<Vasthu_Models.MasterContent>
@{
    ViewBag.Title = Vastu.Resources.Resource.CONTACT;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2><strong>@Vastu.Resources.Resource.CONTACT</strong></h2>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <div class="map-section">
        <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3239.208774279563!2d139.7563275!3d35.7210837!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60188db64dac6fdf%3A0xe229a7973ae68b1d!2s5-ch%C5%8Dme-28-20%20Hakusan%2C%20Bunkyo%20City%2C%20T%C5%8Dky%C5%8D-to%20112-0001%2C%20Japan!5e0!3m2!1sen!2sin!4v1594712214103!5m2!1sen!2sin" frameborder="0" allowfullscreen></iframe>
    </div>

    <section id="contact" class="contact">
        <div class="container">

            <div class="row justify-content-center" data-aos="fade-up">
                <div class="col-lg-10">
                    <div class="info-wrap">
                        <div class="row">

                            <div class="col-lg-4 info">
                                <i class="icofont-google-map"></i>
                                <h4>@Vastu.Resources.Resource.Location:</h4>

                                @if (Model != null && Model.Count > 0)
                                {
                                    if (Model[0].ContentID == 42 && Model[0].ContentName != "")
                                    {
                                        <p>
                                            @Html.Raw(Model[0].ContentName)
                                        </p>
                                    }
                                    else
                                    {
                                        <p>5-28-20 Hakusan, Bunkyo-ku,<br>Tokyo 112-0001</p>
                                    }
                                }
                                else
                                {
                                    <p>5-28-20 Hakusan, Bunkyo-ku,<br>Tokyo 112-0001</p>
                                }

                            </div>

                            <div class="col-lg-4 info mt-4 mt-lg-0">
                                <i class="icofont-envelope"></i>
                                <h4>@Vastu.Resources.Resource.Email:</h4>
                                @*  <p>info@email.com<br>contact@email.com</p>*@
                                @if (Model != null && Model.Count > 0)
                                {
                                    if (Model[1].ContentID == 44 && Model[1].ContentName != "")
                                    {
                                        <p>
                                            @Html.Raw(Model[1].ContentName)
                                        </p>
                                    }
                                    else
                                    {
                                        <p>info@email.com<br>contact@email.com</p>
                                    }
                                }
                                else
                                {
                                    <p>info@email.com<br>contact@email.com</p>
                                }
                            </div>

                            <div class="col-lg-4 info mt-4 mt-lg-0">
                                <i class="icofont-phone"></i>
                                <h4>@Vastu.Resources.Resource.Call:</h4>
                                @* <p>03-1234-1234</p>*@
                                @if (Model != null && Model.Count > 0)
                                {
                                    if (Model[2].ContentID == 45 && Model[2].ContentName != "")
                                    {
                                        <p>
                                            @Html.Raw(Model[2].ContentName)
                                        </p>
                                    }
                                    else
                                    {
                                        <p>03-1234-1234</p>
                                    }
                                }
                                else
                                {
                                    <p>03-1234-1234</p>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>

