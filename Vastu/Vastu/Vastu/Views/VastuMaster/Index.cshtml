        </th>
        <th>
            @Html.DisplayName(Vastu.Resources.Resource.Area)
        </th>
        <th>
            @Html.DisplayName(Vastu.Resources.Resource.Direction)
        </th>

        <th>
            @Html.DisplayName(Vastu.Resources.Resource.Score)
        </th>
        <th>
            @Html.DisplayName(Vastu.Resources.Resource.ExtraScore)
        </th>

        @*<th style="padding-left: 0px;">
