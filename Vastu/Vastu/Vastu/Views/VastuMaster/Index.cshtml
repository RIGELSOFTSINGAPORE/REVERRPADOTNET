                </td>
            <td>
                <a href="#" onclick="DeleteVastuConfirmation(@item.VASTU_ID);" id="btnDelete" data-toggle="modal" data-target="#deleteModal" title="Delete"><span class="glyphicon glyphicon-trash"></span></a>
            </td>
        </tr>
    }
    @if (Model.Count == 0)
    {
        <tr>
            <td colspan="8" align="center">@Vastu.Resources.Resource.NoRecordFound</td>
        </tr>
    }
</table>


<br />
@if (Model.PageSize < Model.TotalItemCount)
{
    <div>
        @Vastu.Resources.Resource.Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) @Vastu.Resources.Resource.of  @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Index",
             new { page }))
    </div>
}
@section scripts
{

    <script>
function CreateVastu() {
           window.location.href = "@Url.Action("Create", "VastuMaster",new {area = @ViewBag.AreaID })";
        }

        function DeleteVastuConfirmation(VastuID) {

            $('#DeleteVastuId').val(VastuID);
            $('#DeleteVastuModal').modal('show');
        }

        $('.btndeletevastu').on('click', function () {

            DeleteVastu($('#DeleteVastuId').val());

        });
        function DeleteVastu(VastuID) {
            //debugger;
            $('#DeleteVastuModal').modal('hide');
            $.ajax({
                url: '@Url.Action("DeleteVastuMaster", "VastuMaster")',
                type: 'POST',
                data: { 'VastuID': VastuID },
                success: function (result) {
                    if (result.errorcode == 1) {

                        alert('@Vastu.Resources.Resource.VastuMasterDeletedSuccessfully');
                        window.location.href = "@Url.Action("Index", "VastuMaster",new {area = @ViewBag.AreaID })";
                    }
                    else {
                        alert('@Vastu.Resources.Resource.VastuMasterDeletionFailed.');
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }

    </script>
    <script>
        $(document).ready(function () {

            var SelectedAreaID = parseInt(@ViewBag.AreaID);
            $("#Areadp  option[value=" + '@ViewBag.AreaID' + "]").prop("selected", true);
    })
    </script>
}


    

