@model Vasthu_Models.VS_IMAGE_MST

@{
    ViewBag.Title = @Vastu.Resources.Resource.ImageMasterEdit;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";


}

    <h2>@Vastu.Resources.Resource.ImageMasterEdit</h2>


@using (Html.BeginForm("Edit", "ImageMaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IMAGE_ID)
    @Html.HiddenFor(model => model.IMAGE_URL)
    @Html.HiddenFor(model => model.CREATED_USER_NAME)
    @Html.HiddenFor(model => model.C_USER_DATE)
    @Html.HiddenFor(model => model.UPDATED_USER_NAME)
    @Html.HiddenFor(model => model.U_USER_DATE)
    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.ImageDetails, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.IMAGE_DETAILS, new { htmlAttributes = new { @class = "form-control", @style = "border-radius: 6px;" } })
            @Html.ValidationMessageFor(model => model.IMAGE_DETAILS, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.ImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @if (Model.IMAGE_URL != "" && Model.IMAGE_URL != null)
            {
                if (File.Exists(Server.MapPath("~/ScoreImage/" + Model.IMAGE_URL)))
                {
                    <img src="@Url.Content("~/ScoreImage/" + Model.IMAGE_URL + "")" style="width:50px;height:50px;">
                }
                else
                {
                    <img src="@Url.Content("~/ScoreImage/Imagenotfound.jpg")" style="width:50px;height:50px;">
                }

            }
            else
            {
                <img src="@Url.Content("~/ScoreImage/Thumbnailnotgenerated.jpg")" style="width:50px;height:50px;">
            }
            @Html.DisplayFor(model => model.IMAGE_URL)
        </div>
    </div>
    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.ImageSymbol, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.IMAGE_SYMBOL, new { htmlAttributes = new { @class = "form-control", @style = "border-radius: 6px;", @maxlength = "1", @autocomplete = "off" } })
            @Html.ValidationMessageFor(model => model.IMAGE_SYMBOL, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.ImageFile, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.PostedEditFile, new { type = "file", @class = "choosenfile2" })
            @Html.ValidationMessageFor(m => m.PostedEditFile, "", new { @class = "text-danger", @style = "display:contents;" })
        </div>
    </div>



    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.Disable, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-6" style="margin-left: -94px;">
            
                @Html.EditorFor(model => model.DELETE_FLAG)
                @Html.ValidationMessageFor(model => model.DELETE_FLAG, "", new { @class = "text-danger" })
            
        </div>
    </div>

    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.CreatedUser, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.CREATED_USER_NAME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CREATED_USER_NAME, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.CreatedDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.C_USER_DATE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.C_USER_DATE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.Updateduser, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.UPDATED_USER_NAME, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UPDATED_USER_NAME, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row">
        @Html.Label(Vastu.Resources.Resource.UpdatedDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.U_USER_DATE, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.U_USER_DATE, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="@Vastu.Resources.Resource.Save" class="btn btn-default btnCreate" style="background-color:#1bbd36; color:white;width: 84px;" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink(Vastu.Resources.Resource.BacktoList, "Index", null, htmlAttributes: new { @class = "edit", @style = "margin-left:1px;" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
}
