@{
    ViewBag.Title = Vastu.Resources.Resource.Home;
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@model List<Vasthu_Models.MasterContent>
<!-- ======= Hero Section ======= -->
<section id="hero">
    <div class="carousel-container">
        <div class="carousel-content animate__animated animate__fadeInUp">
            <h2>@Vastu.Resources.Resource.VastuShastra</h2>

            @if (Model != null && Model.Count > 0)
            {
                if (Model[0].ContentID == 1 && Model[0].ContentName != "")
                {
        <p>
            @Html.Raw(Model[0].ContentName)
            <span id="dots1">...</span><span id="more1">
        </p>
                }
                else
                {
                    <p>
                       @Vastu.Resources.Resource.Homelist1
                        <span id="dots1">...</span><span id="more1">
    @Vastu.Resources.Resource.Homelist11
</span>
                    </p>
                }
            }
            else
            {
        <p>
            @Vastu.Resources.Resource.Homelist1
            <span id="dots1">...</span><span id="more1">
     @Vastu.Resources.Resource.Homelist11
</span>
        </p>
            }
            @*<div class="text-center"><a href="" class="btn-get-started">Learn more</a></div>*@

            <button type="button" id="btnProcess1" class="text-md-left btn-get-started" onclick="myFunction1(this.id)">@Vastu.Resources.Resource.Readmore</button>
        </div>
    </div>

</section>
<!-- End Hero -->

<main id="main">
    <section id="home" class="home">
        <div class="container" style="margin-top:-5px;">

            <section class="section">
                <div class="row">
                    <div class="col-sm-6 col-lg-6 col-md-6 d-flex align-items-stretch">
                        <div class="left-callout">
                            <h3>@Vastu.Resources.Resource.ImportanceofVastu</h3>

                            @if (HttpContext.Current.Request.Cookies["Language"] != null)
                            {

                                if (HttpContext.Current.Request.Cookies["Language"].Value == "en")
                                {
                                    <div class="imgRight">
                                        <img src="~/assets/img/Direction.jpg" width="500" height="400">
                                    </div><br>

                                }
                                else
                                {
                                    <div class="imgRight">
                                        <img src="~/assets/img/Direction_Japanese.png" width="500" height="400">
                                    </div><br>
                                }
                            }
                          
                            else
                            {
                                <div class="imgRight">
                                    <img src="~/assets/img/Direction_Japanese.png" width="500" height="400">
                                </div><br>
                            }

                            @if (Model != null && Model.Count > 0)
                            {
                                if (Model[1].ContentID == 2 && Model[1].ContentName != "")
                                {
                        <p>
                            @Html.Raw(Model[1].ContentName)
                            <span id="dots2">...</span><span id="more2">
                        </p>
                                }
                                else
                                {
                        <p>
                            @Vastu.Resources.Resource.Homelist2
                            <span id="dots2">...</span><span id="more2">
                                 @Vastu.Resources.Resource.Homelist22
</span>
                        </p>
                                }
                            }
                            else
                            {
                                <p>
                                    @Vastu.Resources.Resource.Homelist2<span id="dots2">...</span><span id="more2">
                                        @Vastu.Resources.Resource.Homelist22
                                    </span>
                                </p>
                            }

                            <button type="button" id="btnProcess2" class="text-md-left btn-get-started" onclick="myFunction2(this.id)">@Vastu.Resources.Resource.Readmore</button>
                            @*<div class="text-md-left"><a href="" class="btn-get-started">@Vastu.Resources.Resource.Readmore</a></div>*@

                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-6 col-md-6 d-flex align-items-stretch">
                        <div class="right-callout" style="margin-left:40px;">
                            <h3>@Vastu.Resources.Resource.VastuTipsforHome</h3>

                            @if (HttpContext.Current.Request.Cookies["Language"] != null)
                            {

                                if (HttpContext.Current.Request.Cookies["Language"].Value == "en")
                                {

                                    <div class="imgRight">
                                        <img src="~/assets/img/vastu-tips-for-home.jpg" width="500" height="400">
                                    </div><br>

                                }
                                else
                                {
                                    <div class="imgRight">
                                        <img src="~/assets/img/vastu-tips-for-home_japanese.png" width="500" height="400">
                                    </div><br>
                                }
                            }
                            else
                            {
                                <div class="imgRight">
                                    <img src="~/assets/img/vastu-tips-for-home_japanese.png" width="500" height="400">
                                </div><br>
                            }

                            @if (Model != null && Model.Count > 0)
                            {
                                if (Model[2].ContentID == 3 && Model[2].ContentName != "")
                                {
                        <p>
                            @Html.Raw(Model[2].ContentName)
                            <span id="dots3">...</span><span id="more3">
                        </p>
                                }
                                else
                                {
                        <p>
                            @Vastu.Resources.Resource.Homelist3 <span id="dots3">...</span><span id="more3">
                             @Vastu.Resources.Resource.Homelist33
</span>
                        </p>
                                }
                            }
                            else
                            {
                        <p>
                            @Vastu.Resources.Resource.Homelist3<span id="dots3">...</span><span id="more3">
                            @Vastu.Resources.Resource.Homelist33
</span>
                        </p>
                            }

                            @*<div class="text-md-left"><a href="" class="btn-get-started">@Vastu.Resources.Resource.Readmore</a></div>*@
                            <button class="text-md-left btn-get-started" type="button" id="btnProcess3" onclick="myFunction3(this.id)">@Vastu.Resources.Resource.Readmore</button>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
</main>
@section scripts
{
    <script>
        function myFunction1(id) {

            var dots = document.getElementById("dots1");
            var moreText = document.getElementById("more1");

            var btnText = document.getElementById(btnProcess1);

            if (dots.style.display === "none") {
                dots.style.display = "inline";
                $('#btnProcess1').text('@Vastu.Resources.Resource.Learnmore')
                moreText.style.display = "none";
            }
            else {
                dots.style.display = "none";
                $('#btnProcess1').text('@Vastu.Resources.Resource.Learnless')
                moreText.style.display = "inline";
            }
        }


        function myFunction2(id) {

            var dots = document.getElementById("dots2");
            var moreText = document.getElementById("more2");

            var btnText = document.getElementById(btnProcess2);

            if (dots.style.display === "none") {
                dots.style.display = "inline";
                $('#btnProcess2').text('@Vastu.Resources.Resource.Learnmore')
                moreText.style.display = "none";
            }
            else {
                dots.style.display = "none";
                $('#btnProcess2').text('@Vastu.Resources.Resource.Learnless')
                moreText.style.display = "inline";
            }
        }


        function myFunction3(id) {

            var dots = document.getElementById("dots3");
            var moreText = document.getElementById("more3");

            var btnText = document.getElementById(btnProcess3);

            if (dots.style.display === "none") {
                dots.style.display = "inline";
                $('#btnProcess3').text('@Vastu.Resources.Resource.Learnmore')
                moreText.style.display = "none";
            }
            else {
                dots.style.display = "none";
                $('#btnProcess3').text('@Vastu.Resources.Resource.Learnless')
                moreText.style.display = "inline";
            }
        }
    </script>


    <script>
        $(document).ready(function () {
            var dots1 = document.getElementById("dots1");
            var moreText1 = document.getElementById("more1");
            var btnText1 = document.getElementById(btnProcess1);
            dots1.style.display = "inline";
            $('#btnProcess1').text('@Vastu.Resources.Resource.Learnmore')
            moreText1.style.display = "none";


            var dots2 = document.getElementById("dots2");
            var moreText2 = document.getElementById("more2");
            var btnText2 = document.getElementById(btnProcess2);
            dots2.style.display = "inline";
            $('#btnProcess2').text('@Vastu.Resources.Resource.Learnmore')
            moreText2.style.display = "none";

            var dots3 = document.getElementById("dots3");
            var moreText3 = document.getElementById("more3");
            var btnText3 = document.getElementById(btnProcess3);
            dots3.style.display = "inline";
            $('#btnProcess3').text('@Vastu.Resources.Resource.Learnmore')
            moreText3.style.display = "none";


        });
    </script>
}