
@using RPA_Common;
@model video
@{ Layout = null; }

<form>
    @Html.Hidden("EditVideoId", Model.MediaID)
    <p id="demo" style="color:red;"></p>
    <div class="form-group">
        <label for="Title">@RPA_Sales.Resources.Resource.Title</label>
        <input type="text" class="form-control" id="EditVideoTitle" value="@Model.Title" aria-describedby="emailHelp">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label for="Description">@RPA_Sales.Resources.Resource.Description</label>
        <input type="text" class="form-control" id="EditVideoDesc" value="@Model.Description" aria-describedby="updatedby">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>

    <div class="form-group">
        <label for="Description">@RPA_Sales.Resources.Resource.VideoList</label>
        <br />
        @Html.DropDownList("SelectVideo", TempData["SelectVideo"] as SelectList, new { @onchange = "SelectedValue(this)" })
        @{TempData.Keep("SelectVideo");}
    </div>
    <div class="form-group">
        <label for="Description">@RPA_Sales.Resources.Resource.UploadVideo</label>
        <input type="file" class="form-control" id="EdtiVideoFile" value="@Model.Filename" aria-describedby="updatedby">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
</form>