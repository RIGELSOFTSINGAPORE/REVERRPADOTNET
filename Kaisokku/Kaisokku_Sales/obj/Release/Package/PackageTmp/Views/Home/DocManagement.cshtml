@section ScriptSection
{
    <script>
            function RefreshDataTable() {
                debugger;
                $('#DocGrid').DataTable().ajax.reload(null, false);
                $("#DocGrid").DataTable().page('first').draw('page');
            //mApp.unblock('#dltpopup .modal-content');
            //mApp.unblockPage();
        }
        $(document).ready(function () {
            debugger;
            $("#DocGrid").DataTable({

                "processing": true, // for show progress bar
                "serverSide": false, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 5,

                "ajax": {
                   
                     url: '@Url.Action("LoadDocListData", "Home")',
                    "type": "POST",
                    "datatype": "json"
                },

                "columnDefs":
                    [{
                        "targets": [0],
                        "visible": false,
                        "searchable": true,
                        "orderable": true
                    },
                    {
                        "targets": [1],
                        //"visible": true,
                        "searchable": true,
                        "orderable": true
                    },
                    {
                        "targets": [2],
                        "searchable": false,
                        "orderable": true
                    },
                    {
                        "targets": [3],
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [4],
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [5],
                        "searchable": false,
                        "orderable": false
                    },
                    {
                            "targets": [6],
                            "searchable": false,
                            "orderable": false
                        },
                        {
                            "targets": [7],
                            "searchable": false,
                            "orderable": false
                        }
                        //{
                        //    "targets": [8],
                        //    "searchable": false,
                        //    "orderable": false
                        //}

                    ],


                "columns": [
                    { "data": "MediaID", "name": "MediaID", "autoWidth": true },
                    { "data": "Title", "name": "Title", "autoWidth": true },
                    { "data": "Description", "name": "Description", "autoWidth": true },
                   // { "data": "Filename", "name": "Filename", "autoWidth": true },

                    { "data": "IPaddress", "name": "IPaddress", "autoWidth": true },
                    { "data": "Viewcount", "name": "Viewcount", "autoWidth": true },

                    {
                        "render": function (data, type, row, meta) { return "<a class='btn btn-info' href='javascript:void(0);' onclick=EditVideo('" + row.MediaID + "');>@RPA_Sales.Resources.Resource.Edit</a>"; }
                    },
                    {
                        "render": function (data, type, row, meta) { return "<a class='btn btn-info' href='javascript:void(0);' onclick=ViewVideo('" + row.MediaID + "');>@RPA_Sales.Resources.Resource.View</a>"; }
                    },
                    {
                        data: null, render: function (data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=DeleteVideoConfirmation('" + row.MediaID + "'); >@RPA_Sales.Resources.Resource.Delete</a>";
                        }
                    },

                ]

            });
            $('.btncreatemenu').on('click', function () {
              //  $('.editVideocontent').html();
              //  $('#EditVideoModal').modal('show');
                debugger;
                $.ajax({
                url: '@Url.Action("CreateDocListData", "Home")',
                type: 'GET',
                success: function (result) {
                    debugger;
                    $('.createVideocontent').html(result);
                    $('#CreateVideoModal').modal('show');
                     },
                error: function (error) {
                    console.log(error);
                }
            });
            });

            $('.btnsavemenu').on('click', function () {
                debugger;
                if ($('#EditDocId').val() == "") {
                    document.getElementById("demo").innerHTML = "Please enter ID";
                }
                else if ($('#EditDocTitle').val() == "") {
                    document.getElementById("demo").innerHTML = "Please enter Title";
                }
                else if ($('#EditDocDesc').val() == "") {
                    document.getElementById("demo").innerHTML = "Please enter Description";
                }
                else {
                    var VideoId = $('#EditDocId').val();
                    var VideoTitle = $('#EditDocTitle').val();
                    var VideoDesc = $('#EditDocDesc').val();
                    var updateVideoFile = $('#EdtiDocFile').get(0).files;

                    var fileData = new FormData();

                    for (var i = 0; i < updateVideoFile.length; i++) {
                        fileData.append("EdtiDocFile", updateVideoFile[i]);
                    }
                    fileData.append('VideoId', VideoId)
                    fileData.append('VideoTitle', VideoTitle)
                    fileData.append('VideoDesc', VideoDesc)
                    $('#EditVideoModal').modal('hide');
                    $.ajax({
                        url: '@Url.Action("SaveDocListData", "Home")',
                        type: 'POST',
                        contentType: false,
                        processData: false,
                        data: fileData,
                        success: function (result) {

                            if (result.errorcode == 0) {
                                alert('@RPA_Sales.Resources.Resource.UpdatedSuccessfullyDocument');
                                RefreshDataTable();
                            }
                            else {
                                alert('@RPA_Sales.Resources.Resource.DocumentUpdationFailed');
                            }
                        },
                        error: function (error) {
                            console.log(error);
                        }

                    });
                }
            });


            $('.btnscreateavemenu').on('click', function () {
                debugger;
                if ($('#CreateDocTitle').val() == "" && $('#CreateDocDesc').val() == "" && $("#CreateDocFile").get(0).files.length == 0) {
                    document.getElementById("title").innerHTML = "Please enter Title";
                    document.getElementById("des").innerHTML = "Please enter Description";
                    document.getElementById("upload").innerHTML = "Please upload Video File";
                }
                else if ($('#CreateDocTitle').val() != "" && $('#CreateDocDesc').val() == "" && $("#CreateDocFile").get(0).files.length == 0) {
                    document.getElementById("title").innerHTML = "";
                    document.getElementById("des").innerHTML = "Please enter Description";
                    document.getElementById("upload").innerHTML = "Please upload Video File";
                }
                else if ($('#CreateDocTitle').val() != "" && $('#CreateDocDesc').val() != "" && $("#CreateDocFile").get(0).files.length == 0) {
                    document.getElementById("title").innerHTML = "";
                    document.getElementById("des").innerHTML = "";
                    document.getElementById("upload").innerHTML = "Please upload Video File";
                }
                else if ($('#CreateDocTitle').val() == "" && $('#CreateDocDesc').val() == "" && $("#CreateDocFile").get(0).files.length != 0) {
                    document.getElementById("title").innerHTML = "Please enter Title";
                    document.getElementById("des").innerHTML = "Please enter Description";
                    document.getElementById("upload").innerHTML = "";
                }
                else if ($('#CreateDocTitle').val() != "" && $('#CreateDocDesc').val() == "" && $("#CreateDocFile").get(0).files.length != 0) {
                    document.getElementById("title").innerHTML = "";
                    document.getElementById("des").innerHTML = "Please enter Description";
                    document.getElementById("upload").innerHTML = "";
                }
                else if ($('#CreateDocTitle').val() == "" && $('#CreateDocDesc').val() != "" && $("#CreateDocFile").get(0).files.length != 0) {
                    document.getElementById("title").innerHTML = "Please enter Title";
                    document.getElementById("des").innerHTML = "";
                    document.getElementById("upload").innerHTML = "";
                }
                else if ($('#CreateDocTitle').val() == "" && $('#CreateDocDesc').val() != "" && $("#CreateDocFile").get(0).files.length == 0) {
                    document.getElementById("title").innerHTML = "Please enter Title";
                    document.getElementById("des").innerHTML = "";
                    document.getElementById("upload").innerHTML = "Please upload Video File";
                }

                else
                {
                    var VideoTitle = $('#CreateDocTitle').val();
                    var VideoDesc = $('#CreateDocDesc').val();
                    //var updateVideoFile = $('#CreateVideoFile').val();
                    var updateVideoFile = $("#CreateDocFile").get(0).files;
                    var fileData = new FormData();

                    for (var i = 0; i < updateVideoFile.length; i++) {
                        fileData.append("CreateDocFile", updateVideoFile[i]);
                    }
                    fileData.append('VideoTitle', VideoTitle)
                    fileData.append('VideoDesc', VideoDesc)
                    $('#CreateVideoModal').modal('hide');
                    $.ajax({
                        url: '@Url.Action("SaveCreateDocListData", "Home")',
                        type: 'POST',
                        contentType: false,
                        processData: false,
                        data: fileData,
                        success: function (result) {

                            if (result.errorcode == 0) {
                                alert('@RPA_Sales.Resources.Resource.DocumentCreatedSuccessfully');
                                RefreshDataTable();
                            }
                            else {
                                alert('@RPA_Sales.Resources.Resource.DocumentCreationFailed');
                            }
                        },
                        error: function (error) {
                            console.log(error);
                        }

                    });
                }
            });




            $('.btndeletevideo').on('click', function () {
                DeleteVideo($('#DeleteVideoId').val());
            });
        });

        function EditVideo(MediaID) {
            debugger;
            $.ajax({
                url: '@Url.Action("GetDocListDataById", "Home")',
                type: 'POST',
                data: { 'MediaID': MediaID },
                success: function (result) {
                    debugger;
                    $('.editVideocontent').html(result);
                    $('#EditVideoModal').modal('show');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
        function ViewVideo(MediaID) {
            debugger;
            $.ajax({
                url: '@Url.Action("ViewDocListDataById", "Home")',
                type: 'POST',
                data: { 'MediaID': MediaID },
                success: function (result) {
                    debugger;
                    //$('#videofiles').empty();
                    //$('#videofiles').append("<option value='0'>--Select--</option>");
                    //$.each(result, function () {
                    //    videofiles.append($("<option></option>").val(this['Value']).html(this['Text']));
                    //});
                    $('.ViewVideocontent').html(result);
                    $('#ViewVideoModal').modal('show');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }

        function DeleteVideoConfirmation(MediaID) {
            debugger;
            $('#DeleteVideoId').val(MediaID);
             $('#DeleteVideoModal').modal('show');
        }

        function DeleteVideo(MediaID) {
            debugger;
            $('#DeleteVideoModal').modal('hide');
            $.ajax({
                url: '@Url.Action("DeleteDocById", "Home")',
                type: 'POST',
                data: { 'MediaID': MediaID },
                success: function (result) {
                    if (result.errorcode == 0) {

                        alert('@RPA_Sales.Resources.Resource.DocumentDeletedSuccessfully');
                        RefreshDataTable();
                    }
                    else {
                        alert('@RPA_Sales.Resources.Resource.DocumentDeletionFailed');
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
    </script>
}
