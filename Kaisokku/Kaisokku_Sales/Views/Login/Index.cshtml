@model Kaisokku_Common.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>KAISOKKU - LogIn Page</title>
    <link href='https://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Arimo' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Hind:300' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
    <link href="~/main_login/style.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="~/assets/vendor_components/bootstrap/dist/css/bootstrap.css">*@
    <script src="https://use.fontawesome.com/6e2e2c871f.js"></script>

    <style>
        .textred {
            color: white;
        }
        ::placeholder {
            color: white;
            opacity: 1; /* Firefox */
        }

        :-ms-input-placeholder { /* Internet Explorer 10-11 */
            color: white;
        }

        ::-ms-input-placeholder { /* Microsoft Edge */
            color: white;
        }
    </style>
</head>
<body>
    <!-- partial:index.partial.html -->

    @if (TempData["Message"] != null)
    {
        <div id="login-button" style="display:none">
            <img src="~/main_login/login-icon.png" />
        </div>
        <div id="container" style="display:block">
            <h1>Log In</h1>
            <span class="close-btn">
                <img src="~/main_login/close-icon-29.png" />
            </span>

            @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
            {
                @Html.ValidationSummary(false)

                @*@Html.AntiForgeryToken()*@

                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Username" })
                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })


                @Html.TextBoxFor(model => model.password, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.password, null, new { @class = "text-danger" })

                @*<a href="#">Login</a>*@
                <button type="submit" class="btnlogin">Login</button>

                <div id="remember-container">
                    @Html.CheckBoxFor(model => model.RememberMe, new { @class = "checkbox", @checked = "checked" })
                    <span id="remember">Remember me</span>
                    @Html.ValidationMessageFor(model => model.RememberMe, null, new { @class = "text-danger" })
                    <span id="forgotten">Forgotten password?</span>
                </div>
                @Html.Label("ErrorMsg", Convert.ToString(TempData["Message"]) == null ? "" : Convert.ToString(TempData["Message"]), new { @class = "text-danger textred" })

            }



        </div>
    }
    else
    {
        <div id="login-button">
            <img src="~/main_login/login-icon.png" />
        </div>
        <div id="container">
            <h1>Log In</h1>
            <span class="close-btn">
                <img src="~/main_login/close-icon-29.png" />
            </span>

            @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
            {
                @Html.ValidationSummary(false)

                @*@Html.AntiForgeryToken()*@

                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Username" })
                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })


                @Html.TextBoxFor(model => model.password, new { @class = "form-control", @type = "password", @placeholder = "Password" })
                @Html.ValidationMessageFor(model => model.password, null, new { @class = "text-danger" })

                @*<a href="#">Login</a>*@
                <button type="submit" class="btnlogin">Login</button>

                <div id="remember-container">
                    @Html.CheckBoxFor(model => model.RememberMe, new { @class = "checkbox", @checked = "checked" })
                    <span id="remember">Remember me</span>
                    @Html.ValidationMessageFor(model => model.RememberMe, null, new { @class = "text-danger" })
                    @*<span id="forgotten">Forgotten password?</span>*@
                </div>

            }



        </div>
    }

    <!-- Forgotten Password Container -->
    <div id="forgotten-container">
        <h1>Forgotten</h1>
        <span class="close-btn">
            <img src="~/main_login/close-icon-29.png" />
        </span>
        @*<form>

                <input type="email" name="email" placeholder="E-mail" id="txtEmail">

                <button type="submit" class="btnlogin" id="Forget">Get new password</button>
            </form>*@

        @using (Html.BeginForm("ForgotPassword", "Login", FormMethod.Post))
        {
            @Html.ValidationSummary(false)

            @*@Html.AntiForgeryToken()*@

            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
            <button type="submit" class="btnlogin ">Get new password</button>
            @Html.Label("ErrorMsg", Convert.ToString(TempData["Message"]) == null ? "" : Convert.ToString(TempData["Message"]), new { @class = "text-danger textred" })

        }

    </div>
    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/gsap/1.16.1/TweenMax.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/main_login/script.js"></script>
</body>
</html>