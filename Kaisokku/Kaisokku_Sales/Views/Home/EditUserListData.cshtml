@using Kaisokku_Common;
@using System.Collections.Generic;
@model EditUserDetails
@{ Layout = null; }


@if (Model == null)
{
    @Html.Hidden("DeleteUserId")
 
        <div class="form-group">
            @Html.Label(@Kaisokku_Sales.Resources.Resource.Username)
            @Html.Hidden("UserId")
       
            @Html.TextBox("UserName", null, new { @class = "form-control", id = "UserName" })
            <p style="color:red" id="Uname"></p>

        </div>
 
        <div class="form-group">
            @Html.Label(@Kaisokku_Sales.Resources.Resource.Password)

            @Html.TextBox("Password", null, new { @class = "form-control", id = "Password" })
            <p style="color:red" id="PWD"></p>

        </div>
 
        <div class="form-group">
            @Html.Label(@Kaisokku_Sales.Resources.Resource.Email)

            @Html.TextBox("Email", null, new { @class = "form-control", id = "Email" })
            <p style="color:red" id="Mail"></p>
        </div>
   

        <div class="form-group">
            @Html.Label(@Kaisokku_Sales.Resources.Resource.CustomerType)
        
            @Html.DropDownList("CustomerSelection", (IEnumerable
           <SelectListItem>)TempData["CustomerSelection"],new { @class = "form-control" })
        </div>

        {TempData.Keep("CustomerSelection");}
  


       <div class="form-group">
            @Html.Label(@Kaisokku_Sales.Resources.Resource.Active)
       
            @Html.CheckBox("IsActive", false, new { })
       
                   </div>
       <div class="form-group" style="display:none">
            @Html.Label(@Kaisokku_Sales.Resources.Resource.Client)
     
            @Html.CheckBox("IsClient", false, new { })
        </div>
   }
else
{
    <form>
        @Html.Hidden("EditUserId", Model.UserMasterId)
        <div class="form-group">
            <label for="UserName">@Kaisokku_Sales.Resources.Resource.Username</label>
            <input type="text" class="form-control" id="EditUserName" value="@Model.UserName" aria-describedby="emailHelp">
            <p style="color:red" id="Uname"></p>
           
        </div>
        <div class="form-group">
            <label for="Password">@Kaisokku_Sales.Resources.Resource.Password</label>
            <input type="text" class="form-control" id="EditPassword" value="@Model.Password" aria-describedby="emailHelp">
            <p style="color:red" id="PWD"></p>
           
        </div>
        <div class="form-group">
            <label for="Email">@Kaisokku_Sales.Resources.Resource.Email</label>
            <input type="text" class="form-control" id="EditEmail" value="@Model.Email" aria-describedby="emailHelp">
      <p style="color:red" id="Mail"></p>
        </div>

        <div class="form-group">
            <label for="Email">@Kaisokku_Sales.Resources.Resource.CustomerType</label>
            @*<input type="text" class="form-control" id="EditEmail" value="@Model.Email" aria-describedby="emailHelp">*@
            @{
                var listItems = new List<SelectListItem>();
                listItems.Add(new SelectListItem { Text = "Existing Customer", Value = "1" });
                listItems.Add(new SelectListItem { Text = "General Cusotmer", Value = "2" });
                @Html.DropDownListFor(m => m.CustomerType, listItems, listItems[Model.CustomerType - 1].Selected = true);
            }
        </div>
        <div class="form-group">
            <label for="Active">@Kaisokku_Sales.Resources.Resource.Active</label>
            @Html.CheckBoxFor(m => m.Active)
        </div>
        <div class="form-group" style="display:none">
            <label for="ClientUser">@Kaisokku_Sales.Resources.Resource.ClientUser</label>
            @Html.CheckBoxFor(m => m.Client)
        </div>
    </form>
}