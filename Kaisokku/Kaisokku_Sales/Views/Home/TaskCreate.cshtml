

@using Kaisokku_Common;
@model Tasks
@{ Layout = null; }

<form>
    @Html.Hidden("EditTaskId", Model.TaskMasterId)
    <p id="demo" style="color:red;"></p>
    <div class="form-group">
        <label for="Title">@Kaisokku_Sales.Resources.Resource.Title</label>
        <input type="text" class="form-control" id="EditTaskTitle" value="@Model.TaskName" aria-describedby="emailHelp">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>
    <div class="form-group">
        <label for="Description">@Kaisokku_Sales.Resources.Resource.Description</label>
        <input type="text" class="form-control" id="EditTaskDesc" value="@Model.TaskDescription" aria-describedby="updatedby">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
    </div>

    <div class="form-group">
        <label for="Description">@Kaisokku_Sales.Resources.Resource.Username</label><br />
        @Html.DropDownListFor(model => model.userid, TempData["SelectUser"] as SelectList, new { @id = "dp" })
        @{TempData.Keep("SelectUser");}
    </div>

</form>
