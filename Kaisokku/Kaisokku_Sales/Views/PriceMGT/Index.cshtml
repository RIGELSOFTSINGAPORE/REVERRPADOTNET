@using Kaisokku_Common;
@model Pricemgt
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Price Management </title>
    <style>


        .table-bordered > thead > tr > td, .table-bordered > thead > tr > th {
            font-size: 16px !important;
            font-weight: 600 !important;
        }

        .table-bordered > tbody > tr > td, .table-bordered > tbody > tr > td {
            padding: 15px;
        }
    </style>
</head>
<body>

    @Html.HiddenFor(m => m.ID, new { id = "Id" })
    <div>
        <h1>
            Price  Management
        </h1>
        <div>
            <br />
            <button type="submit" class="btn btn-primary btncreatemenu">Create New</button>
            <br />
            <br />
            <div>
                <br />
                <div style="background:white;padding:10px;">
                    <table id="PriceGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" cellpadding="5">
                        <thead>
                            <tr>

                                <th style="width:10%">ID</th>
                                <th style="width:20%">Product Name</th>
                                <th style="width:20%">Price</th>
                                <th style="width:20%">Validity</th>
                                <th style="width:10%">@Kaisokku_Sales.Resources.Resource.Edit</th>
                                <th style="width:10%">@Kaisokku_Sales.Resources.Resource.Delete</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div class="modal fade" id="CreateSocialModal" tabindex="-1" role="dialog" aria-labelledby="CreateSocialModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="CreateSocialModalLabel">Create Price</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                @*<div class="modal-body createSocialcontent">
                        CreateSocialMedia

                    </div>*@
                <div class="modal-body createSocialcontent">
                    CreateClient

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Kaisokku_Sales.Resources.Resource.Close</button>
                    <button type="button" class="btn btn-primary btnscreateavemenu">@Kaisokku_Sales.Resources.Resource.SaveChanges</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="Editdata" tabindex="-1" role="dialog" aria-labelledby="EditSocialMediaModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="EditSocialMediaLabel">Edit Price</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body Editcontent">
                    EditPrice

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Kaisokku_Sales.Resources.Resource.Close</button>
                    <button type="button" class="btn btn-primary btnsave">@Kaisokku_Sales.Resources.Resource.SaveChanges</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="DeleteVideoModalLabel">Delete</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body DeleteSocialcontent">
                    Are you sure you want to delete Price's Details?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Kaisokku_Sales.Resources.Resource.No</button>
                    <button type="button" style="background:#da291c;" class="btn btn-primary btndeletevideo btn-danger" onclick="DeleteVideo()">@Kaisokku_Sales.Resources.Resource.Yes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="SucMSG" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-body ">
                    <label id="MSG"></label>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>
</body>



</html>
@section ScriptSection{
    <script>
        function RefreshDataTable() {
            $('#PriceGrid').DataTable().ajax.reload(null, false);
            $("#PriceGrid").DataTable().page('first').draw('page');
        }
        $('.btncreatemenu').on('click', function () {
            
                $.ajax({
                    url: '@Url.Action("Create", "PriceMGT")',
                    type: 'GET',
                    success: function (result) {
                        
                        $('.createSocialcontent').html(result);
                        $('#CreateSocialModal').modal('show');

                    },
                    error: function (error) {
                        
                        console.log(error);
                    }

                });
        });


        function Editdata(ID) {
            
            $.ajax({
               url: '@Url.Action("GetPriceDataById", "PriceMGT")',
                type: 'POST',
                data: { 'ID': ID },
                success: function (result) {
                    $('.Editcontent').html(result);
                    $('#Editdata').modal('show');
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }
          $(document).ready(function () {
            
              $("#PriceGrid").DataTable({
                  language: {
                      searchPlaceholder: "ID/Product Name"
                  },

                  "ajax": {

                      "url": "@Url.Action("LoadPricedata", "PriceMGT")",
                      "type": "POST",
                      "datatype": "json"
                  },

                  "columnDefs":
                      [

                    {
                        "targets": [0],
                        //"visible": true,
                        "searchable": true,
                        "orderable": true
                    },
                    {
                        "targets": [1],
                        "searchable": true,
                        "orderable": true
                    },
                    {
                        "targets": [2],
                        "searchable": false,
                        "orderable": true
                    },
                        {
                            "targets": [3],
                            "searchable": false,
                            "orderable": false
                        },

                    {
                            "targets": [4],
                            "searchable": false,
                            "orderable": false
                        },
                      {
                              "targets": [5],
                              "searchable": false,
                              "orderable": false
                          }

                    ],

                  "columns": [


                      { "data": "ID", "name": "ID", "autoWidth": false},
                      { "data": "product_name", "name": "Product Name", "autoWidth": false },
                      { "data": "Price", "name": "Price", "autoWidth": false },
                      { "data": "Validity", "name": "Validity", "autoWidth": false },


                    {
                        "render": function (data, type, row, meta) { return "<a class='' href='javascript:void(0);' onclick=Editdata('" + row.ID + "');><span  class='glyphicon glyphicon-pencil' aria-hidden='true'></a>"; }
                    },
                    //{
                     //   "render": function (data, type, row, meta) { return "<a class='btn btn-info' style='Display:none' href='javascript:void(0);' onclick=ViewSocialMedia('" + row.SocialMediaID + "');>@Kaisokku_Sales.Resources.Resource.View</a>"; }
                    //},
                    {
                        data: null, render: function (data, type, row) {
                            return "<a href='#' class='' onclick=DeleteSocialConfirmation('" + row.ID + "'); ><span  class='glyphicon glyphicon-trash' aria-hidden='true'></span></a>";
                        }
                    },

               ]


            });

        });

        $('.btnscreateavemenu').on('click', function () {
         
            if ($('#ProductName').val() == "" && $('#Validity').val() == "" && $("#Price").val() == "") {
                document.getElementById("ProductName1").innerHTML = "Please enter Product Name";
                document.getElementById("Validity1").innerHTML = "Please enter Validity";
                document.getElementById("Price1").innerHTML = "Please upload Price";
             }
            else if ($('#Validity').val() == "" && $("#Price").val() == "") {
                 document.getElementById("ProductName1").innerHTML = "";
                document.getElementById("Validity1").innerHTML = "Please enter Validity";
                document.getElementById("Price1").innerHTML = "Please upload Price";
            }
            else if ($('#ProductName').val() == "" && $("#Price").val() == "") {
                document.getElementById("ProductName1").innerHTML = "Please enter Product Name";
                document.getElementById("Validity1").innerHTML = "";
                document.getElementById("Price1").innerHTML = "Please upload Price";
            }
            else if ($("#Price").val() == "") {
                 document.getElementById("ProductName1").innerHTML = "";
                 document.getElementById("Validity1").innerHTML = "";
                document.getElementById("Price1").innerHTML = "Please upload Price";
             }
            else if ($('#ProductName').val() == "" && $('#Validity').val() == "") {
                document.getElementById("ProductName1").innerHTML = "Please enter Product Name";
                document.getElementById("Validity1").innerHTML = "Please enter Validity";
                 document.getElementById("Price1").innerHTML = "";
             }
            else if ( $('#Validity').val() == "" ){
                 document.getElementById("ProductName1").innerHTML = "";
                document.getElementById("Validity1").innerHTML = "Please enter Validity";
                 document.getElementById("Price1").innerHTML = "";
             }
            else if ($('#ProductName').val() == "" ){
                document.getElementById("ProductName1").innerHTML = "Please enter Product Name";
                 document.getElementById("Validity1").innerHTML = "";
                 document.getElementById("Price1").innerHTML = "";
             }
            

             else {
                 var Product = $('#ProductName').val();
                 var Price = $('#Price').val();
                 var Validity = $('#Validity').val();
                 var fileData = new FormData();
                
                 fileData.append('Productname', Product)
                 fileData.append('Validity', Validity)
                 fileData.append('Price', Price)
                
                 $('#CreateSocialModal').modal('hide');
                 $.ajax({
                     url: '@Url.Action("SavePrice", "PriceMGT")',
                     type: 'POST',
                     contentType: false,
                     processData: false,
                     data: fileData,
                     success: function (result) {

                         if (result.errorcode == 0) {
                             /*alert('Price created succesfully');*/
                             @*window.location.href =  '@Url.Action("Index", "PriceMGT")';*@
                             RefreshDataTable()
                             $('#MSG').text("Price created Successfully")
                             $("#SucMSG").modal('show');
                         }
                         else {
                             RefreshDataTable()
                             $('#MSG').text("Price created failed")
                             $("#SucMSG").modal('show')
                             //alert('Price created failed');
                         }
                     },
                     error: function (error) {
                         console.log(error);
                     }

                 });
             }

        });
        $('.btnsave').on('click', function () {
            
            if ($('#ProductName').val() == "" && $('#Validity').val() == "" && $("#Price").val() == "") {
                document.getElementById("ProductName1").innerHTML = "Please enter Product Name";
                document.getElementById("Validity1").innerHTML = "Please enter Validity";
                document.getElementById("Price1").innerHTML = "Please upload Price";
            }
            else if ($('#Validity').val() == "" && $("#Price").val() == "") {
                document.getElementById("ProductName1").innerHTML = "";
                document.getElementById("Validity1").innerHTML = "Please enter Validity";
                document.getElementById("Price1").innerHTML = "Please upload Price";
            }
            else if ($('#ProductName').val() == "" && $("#Price").val() == "") {
                document.getElementById("ProductName1").innerHTML = "Please enter Product Name";
                document.getElementById("Validity1").innerHTML = "";
                document.getElementById("Price1").innerHTML = "Please upload Price";
            }  
            else if ($("#Price").val() == "") {
                document.getElementById("ProductName1").innerHTML = "";
                document.getElementById("Validity1").innerHTML = "";
                document.getElementById("Price1").innerHTML = "Please upload Price";
            }
            else if ($('#ProductName').val() == "" && $('#Validity').val() == "") {
                document.getElementById("ProductName1").innerHTML = "Please enter Product Name";
                document.getElementById("Validity1").innerHTML = "Please enter Validity";
                document.getElementById("Price1").innerHTML = "";
            }
            else if ($('#Validity').val() == "") {
                document.getElementById("ProductName1").innerHTML = "";
                document.getElementById("Validity1").innerHTML = "Please enter Validity";
                document.getElementById("Price1").innerHTML = "";
            }
            else if ($('#ProductName').val() == "") {
                document.getElementById("ProductName1").innerHTML = "Please enter Product Name";
                document.getElementById("Validity1").innerHTML = "";
                document.getElementById("Price1").innerHTML = "";
            }
                    
            else {
            var Product = $('#ProductName').val();
            var Price = $('#Price').val();
            var Validity = $('#Validity').val();
            var Id = $('#PriceID').val();
                
                var fileData = new FormData();

               
            fileData.append('Productname', Product)
            fileData.append('Validity', Validity)
            fileData.append('Price', Price)
               
                fileData.append('Id', Id)
                $('#Editdata').modal('hide');
                $.ajax({
                    url: '@Url.Action("SavePriceListData", "PriceMGT")',
                    type: 'POST',
                    contentType: false,
                    processData: false,
                    data: fileData,
                    success: function (result) {

                        if (result.errorcode == 0) {
                            
                            RefreshDataTable()
                            $('#MSG').text("Price Updated Successfully")
                            $("#SucMSG").modal('show');

                            
                        }
                        else {

                            RefreshDataTable()
                            $('#MSG').text("Price Updated Failed")
                            $("#SucMSG").modal('show');
                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }

                });

            }
            });
         function DeleteSocialConfirmation(Id) {
    
             $('#Id').val(Id);

            $('#DeleteModal').modal('show');
        }

        function DeleteVideo() {

            var Id = $('#Id').val();
            $('#DeleteModal').modal('hide');
            $.ajax({
                url: '@Url.Action("DeletepriceById", "PriceMGT")',
                type: 'POST',
                data: { 'Id': Id },
                success: function (result) {
                    if (result.errorcode == 0) {

                        @*alert('Price Deleted Succesfully');
                      window.location.href =  '@Url.Action("Index", "PriceMGT")';*@
                        RefreshDataTable()
                        $('#MSG').text("Price Deleted Successfully")
                        $("#SucMSG").modal('show');
                    }
                    else {
                        //alert('Price Updated Succesfully');
                        RefreshDataTable()
                        $('#MSG').text("Price Deleted failed")
                        $("#SucMSG").modal('show');
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        }

    </script>
}
